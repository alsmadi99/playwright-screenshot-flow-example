{
  "name": "playwright-screenshot-flow-example",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js",
    "package": "pkg dist/index.js --targets node18-win-x64 --output screenshot.exe"
  },
  "keywords": [
    "automation",
    "evidence",
    "screenshot",
    "playwright",
    "nodejs"
  ],
  "author": "Mohammad Alsmadi <alsmadi.work@gmail.com>",
  "license": "ISC",
  "description": "A Node.js tool for automated evidence collection using screenshots and Playwright.",
  "homepage": "https://github.com/alsmadi99/playwright-screenshot-flow-example",
  "repository": {
    "type": "git",
    "url": "https://github.com/alsmadi99/playwright-screenshot-flow-example.git"
  },
  "bugs": {
    "url": "https://github.com/alsmadi99/playwright-screenshot-flow-example/issues"
  },
  "pkg": {
    "assets": [
      "ms-playwright/**/*"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/screenshot-desktop": "^1.15.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fs-extra": "^11.3.2",
    "playwright": "^1.56.1",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.3"
  }
}
